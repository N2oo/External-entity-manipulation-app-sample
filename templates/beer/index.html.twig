{% extends 'base.html.twig' %}

{% block title %}LIste des bières
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="row row-cols-1 row-cols-md-6 g-4">
            {% for beer in beers %}
                <div class="col">
                    <div class="card">
                        <img src="{{beer.image}}" class="card-img-top" alt="image de la bière '{{beer.name}}'">
                        <div class="card-body">
                            <h5 class="card-title">{{beer.name}}</h5>
                            <p class="card-text">{{beer.price}}</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-body-secondary">Cette bière a une note de
                                {{beer.rating.average|round(2)}}
                                sur
                                {{beer.rating.reviews}}
                                vote{{beer.rating.reviews < 1 ? 's':''}} (score : {{beer.ratio}})</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}